@using mvcProject.Models
@model Category
<form method="post" action="/Admin/Categories/Update">
    <input type="hidden" name="id" value="@Model.Id" class="form-control" id="categoryName" placeholder="Enter Category" />
    <div class="form-group">
        <label for="categoryName">Name</label>
        <input type="text" name="name" value="@Model.Name" class="form-control" id="categoryName" placeholder="Enter Category" />
        <span class="text-danger" asp-validation-for="Name"></span>

    </div>
    <button type="submit" class="btn btn-block btn-outline-success btn-sm mt-3">Update</button>
</form>